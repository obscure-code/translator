{
    "name": "obscure-code/translator",
    "description": "PHP translator",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.0"
    },
    "autoload": {
        "psr-4": {
            "ObscureCode\\Translator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ObscureCode\\Translator\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "~1.6",
        "phpstan/phpstan": "~1.10",
        "phpunit/phpunit": "~10.3",
        "slevomat/coding-standard": "~8.13",
        "squizlabs/php_codesniffer": "~3.7",
        "vimeo/psalm": "~5.15"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "tests": "./vendor/bin/phpunit ./tests",
        "cs": "./vendor/bin/phpcs ./src",
        "stan": "./vendor/bin/phpstan analyze --level=3 ./src",
        "psalm": "./vendor/bin/psalm ./src"
    }
}
