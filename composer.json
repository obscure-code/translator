{
    "name": "obscure-code/translator",
    "description": "PHP translator",
    "type": "library",
    "license": "MIT",
    "minimum-stability": "stable",
    "require": {
        "php": "^8.2"
    },
    "autoload": {
        "psr-4": {
            "ObscureCode\\Translator\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ObscureCode\\Translator\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "mockery/mockery": "~1.6",
        "phpstan/phpstan": "~1.10",
        "phpunit/phpunit": "~10.3",
        "slevomat/coding-standard": "~8.13",
        "squizlabs/php_codesniffer": "~3.7",
        "vimeo/psalm": "~5.15"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
